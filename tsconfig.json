{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["constants/*"],
      "@context/*": ["context/*"],
      "@libs/*": ["libs/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
